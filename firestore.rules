rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Χαλαρή πρόσβαση μόνο για authenticated χρήστες
    match /events/{eventId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /eventForms/{eventId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /eventSubmissions/{submissionId} {
      // Δημόσιες υποβολές: επιτρέπουμε create χωρίς auth
      allow create: if true;
      // Προβολή/τροποποίηση/διαγραφή μόνο από authenticated χρήστες
      allow read, update, delete: if request.auth != null;
    }

    // match /{document=**} {
    //   allow read, write: if request.auth != null;
    // }
  }
}